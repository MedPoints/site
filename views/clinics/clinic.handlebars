            <nav class="sticky-top">

                <div class="row">

                    <div class="col-xl-6 col-lg-12">

                        <div class="wave text-center">
                            {{#if ratings.length}}
                                <h4>{{localize req 'ratings.rating'}} <strong class="text-success">9.99</strong></h4>
                                <p>{{localize req 'ratings.basedOn'}} <strong><a class="" href="#opinions">58 {{localize req 'ratings.opinions'}}</a></strong></p>
                            {{/if}}
