<div class="modal fade" id="booking" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Select a service and a clinic</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fas fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="serviceId">Service:</label>
                    <select id="serviceId" name="service" class="booking-dropdown custom-select">
                    </select>
                </div>
                <div class="form-group">
                    <label for="clinicId">Clinic:</label>
                    <select id="clinicId" name="clinic" class="booking-dropdown custom-select">
                    </select>
                </div>
                <input type="hidden" name="doctor" id="doctorId" />
            </div>
            <!--/.modal-body-->
            <div class="modal-footer">
                <button id="okButton" type="button" class="btn btn-primary">Confirm</button>
            </div>
        </div>
    </div>
</div>