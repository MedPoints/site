{{#if drugs.length}}
<div class="col-xl-3 push-xl-9 col-lg-12 push-lg-0">

    <h3>{{localize req 'drug.categories'}}</h3>

    <ul class="cat-list">
        <li>
            <a class="{{#if (compare selectedCategory '')}}active{{/if}}" href="/drugs">{{localize req 'drug.categoriesAll'}}</a>
        </li>
        {{#each categories as |category|}}
        <li>
            <a href="/drugs?groupId={{category.id}}" class="{{#if (compare ../selectedCategory category.id)}}active{{/if}}">{{category.name}}</a>
            <span class="badge">{{category.drugs}}</span>
        </li>
        {{/each}}
    </ul>
    <!--/.cat-list-->

</div>
<!--/.col-->
{{/if}}

