    <div class="table-responsive">
        <table summary="" class="table table-hover">
            <thead>
                <tr>
                    <th width="40%">
                        <h5>{{localize req 'drugs.table.name'}}</h5>
                    </th>
                    <th>
                        <h5>{{localize req 'drugs.table.price'}}</h5>
                    </th>
                    <th>
                        <h5>{{localize req 'drugs.table.insurance'}}</h5>
                    </th>
                    <th>
                        <h5>{{localize req 'drugs.table.prescription'}}</h5>
                    </th>
                    <th class="text-right">
                        <h5>{{localize req 'drugs.table.providers'}}</h5>
                    </th>
                </tr>
            </thead>
            <tbody>
                {{#each drugs as |drug|}}
                <tr>
                    <td>
                        <h4>
                            <a href="/drugs/{{ drug.id }}" title="">{{{ drug.name }}}</a>
                        </h4>
                        <p>{{ drug.short_descr }}</p>
                    </td>
                    <td class="price-td">{{localize ../req 'common.fromPrice'}}
                        <strong class="text-dark">${{ drug.price.dollars }}</strong>
                        <br />
                        <strong class="text-success">{{ drug.price.mpts }} MPT
                        </strong>
                    </td>
                    <td class="text-center">
                        {{#if drug.is_covered_by_insurance}}
                        <i class="fas fa-plus text-success" data-toggle="tooltip" data-placement="top" title="Can be purchased for insurance points"></i>
                        {{/if}}
                    </td>
                    <td class="text-center">
                        {{#if drug.is_by_prescription}}
                        <i class="fas fa-plus text-success" data-toggle="tooltip" data-placement="top" title="Can be purchased for insurance points"></i>
                        {{/if}}
                    </td>
                    <td>
                        <a class="btn btn-primary float-right" href="/pharmacies?drugId={{drug.id}}">
                            <strong>{{ drug.providers.pharmacies }}</strong> {{localize ../req 'ratings.items.pharmacies'}}</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
