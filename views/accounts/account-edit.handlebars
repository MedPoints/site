<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="/">{{localize 'breadcrumbs.home'}}</a>
		</li>
		<li class="breadcrumb-item">
			<a href="/account">{{localize 'breadcrumbs.account'}}</a>
		</li>
		<li class="breadcrumb-item active" aria-current="page">{{localize 'breadcrumbs.editAccount'}}</li>
	</ol>
</nav>

<div class="row continer-wrapper">

	<div class="col-xl-3 push-xl-9 col-lg-4 push-lg-8 col-md-5 push-md-7 col-sm-12 push-sm-0">
		<nav class="sticky-top">
			<div class="account-menu">

				<ul class="list-group">
					<li class="list-group-item active">
						<a href="/account">{{localize 'account.sidebar.appointments'}}</a>
					</li>
					<li class="list-group-item">
						<a href="/account/records">{{localize 'account.sidebar.records'}}
							<span class="badge">{{recordsCount}}</span>
						</a>
						<ul>
							<li>
								<a href="javascript:void(0)" data-toggle="modal" data-target="#chooseDoctor">
									<i class="fas fa-plus-circle"></i> {{localize 'account.sidebar.addRecord'}}</a>
							</li>
						</ul>
					</li>
					{{!--
					<li class="list-group-item">
						<a href="/account-favorites">Favorites</a>
					</li> --}}
					<li class="list-group-item">
						<a href="/account-tickets">{{localize 'account.sidebar.support'}}</span>
						</a>
						<ul>
							<li>
								<a href="/add-ticket">
									<i class="fas fa-plus-circle"></i> {{localize 'account.sidebar.addTicket'}}</a>
							</li>
						</ul>
					</li>
					<li class="list-group-item">
						<a href="/account/edit">
							<i class="fas fa-cog"></i> {{localize 'account.sidebar.editProfile'}}</a>
					</li>
				</ul>

			</div>
			<!--/.account-menu-->
		</nav>
	</div>
	<!--/.col-->

	<div class="col-xl-9 pull-xl-3 col-lg-8 pull-lg-4 col-md-7 pull-md-5 col-sm-12 pull-sm-0">

		<form>

			<div class="row">
				<div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
					<div class="form-group">
						<label for="walletId">{{localize 'popups.walletDetails.walletId'}}</label>
						<input type="text" class="form-control" id="bookingWalletId" value="{{accountData.privateKey}}" disabled="disabled" />
						<a class="copy-link btn-copy1" onclick="copyToClipboard($('#bookingWalletId'))">{{localize 'common.copy'}}</a>
					</div>
				</div>
				<!--/.col-->
				<div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
					<div class="form-group">
						<label for="walletKey">{{localize 'popups.walletDetails.walletKey'}}</label>
						<input type="text" class="form-control" id="bookingWalletKey" value="{{accountData.publicKey}}" disabled="disabled" />
						<a class="copy-link btn-copy1" onclick="copyToClipboard($('#bookingWalletKey'))">{{localize 'common.copy'}}</a>
					</div>
				</div>
				<!--/.col-->
			</div>
			<!--/.row-->

			<div class="row">
				<div class="col-6">
					<label for="firstName">{{localize 'booking.form.firstName'}}</label>
					<input type="text" name="firstName" value="{{accountData.firstName}}" class="form-control" id="firstName" placeholder="{{localize 'booking.form.firstName'}}"
					 required />
				</div>
				<!--/.col-->
				<div class="col-6">
					<label for="lastName">{{localize 'booking.form.lastName'}}</label>
					<input type="text" name="lastName" value="{{accountData.lastName}}" class="form-control" id="lastName" placeholder="{{localize 'booking.form.lastName'}}"
					 required />
				</div>
				<!--/.col-->
			</div>
			<!--/.row-->

			<div class="row">
				<div class="col">

					<label>{{localize 'booking.form.sex'}}</label>
					<br />

					<label class="custom-control custom-radio">
						<input id="maleRadio" name="radio" type="radio" class="custom-control-input" {{#if (compare accountData.gender 'male')}}checked{{/if}}>
						<span class="custom-control-indicator"></span>
						<span class="custom-control-description">{{localize 'booking.form.sexTypes.male'}}</span>
					</label>
					<label class="custom-control custom-radio">
						<input id="femaleRadio" name="radio" type="radio" class="custom-control-input" {{#if (compare accountData.gender 'female')}}checked{{/if}}>
						<span class="custom-control-indicator"></span>
						<span class="custom-control-description">{{localize 'booking.form.sexTypes.female'}}</span>
					</label>

				</div>
				<!--/.col-->
			</div>
			<!--/.row-->

			<hr />

			<h3>{{localize 'booking.form.addAnEmail'}}</h3>

			<div class="row">

				<div class="col-6">
					<label for="email">{{localize 'booking.form.email'}}</label>
					<input type="text" name="email" class="form-control" id="email" value="{{accountData.email}}" placeholder="{{localize 'booking.form.email'}}"
					/>
				</div>
				<div class="col-6">
					<label for="email">{{localize 'booking.form.confirmEmail'}}</label>
					<input type="text" name="confirmEmail" class="form-control" id="confirmEmail" value="{{accountData.email}}" placeholder="{{localize 'booking.form.confirmEmail'}}"
					/>
				</div>
				<!--/.col-->

			</div>
			<!--/.row-->

			<br />

			<a class="btn btn-primary" id="submitAccountEdit" href="javascript:void(0)">{{localize 'account.saveChanges'}}</a>

		</form>

	</div>
	<!--/.col-->
</div>
<!--/.row-->
<script src="/js/src/account.js"></script>