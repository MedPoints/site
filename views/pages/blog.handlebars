

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">{{localize req 'breadcrumbs.home'}}</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{localize req 'breadcrumbs.blog'}}</li>
        </ol>
    </nav>
  
    <div class="row">		
        <div class="col">

            <ul class="items-list">
                {{#each blogArticles}}
